<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.glowapps.vidify"
    tools:ignore="MissingLeanbackLauncher">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/logo"
        android:banner="@mipmap/logo"
        android:logo="@mipmap/logo"
        android:label="@string/app_name">

        <activity
            android:name="com.glowapps.vidify.MainActivity"
            android:icon="@mipmap/logo"
            android:logo="@mipmap/logo"
            android:label="@string/app_name"
            android:theme="@style/Theme.Leanback"
            android:screenOrientation="landscape">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MAIN MOBILE ACTIVITY (NOT IMPLEMENTED)
                <activity android:name=".mobile.MobileWelcomeActivity">
                    <intent-filter>
                        <action android:name="android.intent.action.MAIN" />

                        <category android:name="android.intent.category.LAUNCHER" />
                    </intent-filter>
                </activity>
        -->

        <activity android:name="com.glowapps.vidify.VideoPlayerActivity"
            android:enabled="true" />
    </application>
</manifest>
